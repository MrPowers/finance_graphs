<form class="form-horizontal span5" id="mortgage_amortization_form">

  <div class="control-group">
    <label class="control-label" for="term">Length of Mortgage (in years)</label>
    <div class="controls">
      <input type="text" id="term" placeholder="30">
    </div>
  </div>

  <div class="control-group">
    <label class="control-label" for="rate">Annual Interest Rate</label>
    <div class="controls">
      <input type="text" id="rate" placeholder="4.5%">
    </div>
  </div>

  <div class="control-group">
    <label class="control-label" for="loan">Loan Amount</label>
    <div class="controls">
      <input type="text" id="loan" placeholder="$200,000">
    </div>
  </div>

  <div class="control-group">
    <div class="controls">
      <button type="button" class="btn btn-primary" id="mortgage_button">Calculate Mortgage Amortization Schedule</button>
    </div>
  </div>

</form>

<div class="span5 pull-right text-center hero-unit" id="mortgage_calculator_summary">
  <p><span class='label label-important'>Attention:</span></p>
  <h3>Fill in fields on the left to calculate the mortgage amortization schedule</h3>
</div>


<table class="table table-hover table-striped span6 offset3" id="mortgage_table">
  <thead>
    <tr>
      <td>Month</td>
      <td>Interest</td>
      <td>Principal</td>
      <td>Ending Balance</td>
    </tr>
  </thead>
  <tbody>
  </tbody>
</table>
